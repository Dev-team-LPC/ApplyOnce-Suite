<%= simple_form_for(@applicant_reference) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :Reference_Name, label: "Reference Name", placeholder: "John" %>
    <%= f.input :Contact_Number, label: "Contact Number", placeholder: "0831234567" %>
    <%= f.input :Email_address, label: "Email Address", placeholder: "john@example.com" %>
    <%= f.input :Relationship, placeholder: "Manager" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-block btn-primary" %><br>
  </div>
<% end %>
