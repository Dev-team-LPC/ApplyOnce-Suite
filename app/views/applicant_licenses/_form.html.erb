<%= simple_form_for(@applicant_license) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    
    <%= f.association :applicant_license_code, label: "Drivers License Code", :label_method =>  lambda { |code| "#{code.Drivers_License_Code}"  } %>
    <div id="status">
    	<%= f.association :applicant_license_status, label: "Drivers License Status", :label_method =>  lambda { |status| "#{status.Drivers_License_Status}" }, required: false, :selected => 3 %>
    
    <!-- <label>Drivers License Status</label><br>
    <%= f.collection_select(:id, ApplicantLicenseStatus.all, :id, :Drivers_License_Status, {:include_blank=>true}, {:class=>'form-control'}) %><br> 
    </div> -->
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-primary btn-block" %><br>
  </div>
<% end %>

<script type="text/javascript">

  (function() {
    jQuery(function(){
      $('#applicant_license_applicant_license_code_id').on('change',function(){
          if( $(this).val()==="9"){
          $("#status").hide()
          }
          else{
          $("#status").show()
          }
      });
    });
  }).call(this);

</script>
