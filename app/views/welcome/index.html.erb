<div class="col-xs-12 col-md-12">
<% if !current_applicant.admin? %>
<h1 class="text-center">Welcome to little pig recruitment</h1>
<h3 class="text-center">
  Hello <% if applicant_signed_in? %><%= current_applicant.username %><% end %>
</h3>

<hr>
</div>
	<% if !current_applicant.applicant_foi_programs.any? || !current_applicant.applicant_personal_details.any? || !current_applicant.applicant_licenses.any? || !current_applicant.applicant_disability_types.any? || !current_applicant.applicant_addresses.any? || !current_applicant.applicant_experiences.any? || !current_applicant.applicant_references.any? %>
	  <div class="col-xs-12 col-md-12">
	    <div class="alert alert-danger alert-dismissible text-center fade in" role="alert">
	      <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	      <strong><%= current_applicant.username %></strong> All sections are  complete!
	    </div>
	  </div>
	<% else %>
	  <div class="col-xs-12 col-md-12">
	    <div class="alert alert-success alert-dismissable fade in text-center">
	      <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
	      <strong>All sections are complete!</strong> <a href="/applicants/index" class="alert-link">Click here</a> to view summary
	    </div>
	  </div>
	<% end %>
<div class="col-xs-12 col-md-4 col-md-offset-4">
  <%= render 'layouts/progress3' %>
</div>
<div class="col-xs-12 col-md-12">
 <center>
    <a href="https://fb.me/littlepig.computing" class="fa fa-facebook"></a>
    <a href="https://twitter.com/littlepigcc" class="fa fa-twitter"></a>
    <a href="https://www.linkedin.com/company/little-pig-cc?trk=top_nav_home" class="fa fa-linkedin"></a>
  </center>
</div>

<% else %>
<h1 class="text-center">Oops, Looks like you got lost...</h1>
<h3 class="text-center">
  Please Click the link below to get back to where you should be:
</h3>
<%=link_to "Dashboard", admin_main_path, class:"btn btn-success", style:"align-center"%>
<%end%>
