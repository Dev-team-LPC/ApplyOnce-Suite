<% if !@applicant_field_of_studies.any? %> 
  <%= render 'layouts/incomplete' %>
<% end %>

<div class="panel panel-primary">
  <div class="panel-heading">
    <h1 class="text-center"><%= current_applicant.username %>'s Qualifications</h1>
  </div>
  <div class="panel-body">  
    <table class="table table-hover table-striped table-bordered table-condensed">
      <thead>
        <tr bgcolor="#D9EDF7" style="color: #337AB7;">
        <th>Field of study</th>
        <th>Start date</th>
        <th>End date</th>
        <th>Applicant university</th>
        <th>Applicant qual</th>
        <th>Applicant qual status</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @applicant_field_of_studies.each do |applicant_field_of_study| %>
        <tr>
          <td><%= applicant_field_of_study.Field_Of_Study %></td>
          <td><%= applicant_field_of_study.Start_Date %></td>
          <td><%= applicant_field_of_study.End_date %></td>
          <td><%= applicant_field_of_study.applicant_university_id %></td>
          <td><%= applicant_field_of_study.applicant_qual_id %></td>
          <td><%= applicant_field_of_study.applicant_qual_status_id %></td>
          <td><%= link_to 'Show', applicant_field_of_study, class: "btn btn-xs btn-info" %></td>
          <td><%= link_to 'Edit', edit_applicant_field_of_study_path(applicant_field_of_study), class: "btn btn-xs btn-warning" %></td>
          <td><%= link_to 'Destroy', applicant_field_of_study, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Qualification', new_applicant_field_of_study_path, class: "btn btn-block btn-primary" %><br>
  <% if @applicant_field_of_studies.any? %>
    <%= link_to 'Next Step', applicant_experiences_path, class: "btn btn-block btn-success" %>
  <% end %>
  </div>
</div>  
