<%= simple_form_for(@applicant_disability_type) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :applicant_disability, :label_method =>  lambda { |disability| "#{disability.Disability}"  } %>
    <div id="type">
    	<%= f.input :Disability_Type, hint: "Specify your type of disability" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<script type="text/javascript">

  (function() {
    jQuery(function(){
      $('#applicant_disability_type_applicant_disability_id').on('change',function(){
          if( $(this).val()!=="2"){
          $("#type").hide()
          }
          else{
          $("#type").show()
          }
      });
    });
  }).call(this);

</script>
